<%= render 'shared/navbar_blue' %>

<div class="banner">
	<div class="banner-content">
    <%= image_tag "logo.png", class: "main-logo" %>
    	<p>Creative Sitters & Chaperones</p>
  	</div>
</div>

<!-- First section - Personally Recommended-->
<div class="container section-padding text-center about" id="about">
	<% if @first_par %>
    	<h3><%= @first_par.title.upcase %></h3>
		<p><%= @first_par.content %></p>
  	<% end %>
</div>

<!-- Interval image -->
<div class="image-interval" style="background-image: url('http://res.cloudinary.com/ddota4fci/image/upload/v1474460052/Boy_and_plane_Image_ac1sjn.jpg');">
</div>

<!-- Second section - Our Story -->
<div class="container" id="our-story">
	<h3 class= "our-story-title text-center">OUR STORY</h3>
	<div class="row">
		<div class="col-xs-12 col-md-6">
			<div class="our-story-image hidden-xs hidden-sm">
				<%= image_tag("http://res.cloudinary.com/ddota4fci/image/upload/v1474888128/Bea_Co_1000x1000_jhd81c.jpg", class: "slideRight") %>
			</div>
		</div>
		<div class="col-xs-12 col-md-6 our-story-aside">
	      <% if @story_pars %>
	        <% @story_pars.each_with_index do |story_par, index| %>
	    		<div class="our-story-section">
    				<div class="our-story-icon">
              			<% if index == 0 %>
    					  <i class="fa fa-heart-o"></i>
              			<% elsif index == 1 %>
                			<i class="fa fa-paper-plane-o"></i>
              			<% else %>
               				<i class="fa fa-users"></i>
              			<% end %>
    				</div>
    				<div class="our-story-text">
    					<h4><%= story_par.title.capitalize %></h4>
    					<p><%= story_par.content %></p>
    				</div>
	    		</div>
	        <% end %>
	      <% end %>
		</div>
	</div>
</div>

<!-- Third section - Our Services -->
<div class="our-services-banner" id="services" style="background-image: linear-gradient(
      rgba(0, 0, 0, 0.75),
      rgba(0, 0, 0, 0.75)), url('http://res.cloudinary.com/ddota4fci/image/upload/v1474454347/DSC02082-e1427549825463-1024x642_d2yfp2.jpg');">
  <div class="our-services">
  	<h3 class="text-center">OUR SERVICES</h3>
    <div class="row services-row">
    	<% if @service_paragraphs %>
			<% @service_paragraphs.each_with_index do |service_paragraphs, index| %>
		    	<div class="col-xs-1 col-sm-1 col-md-1">
					<div class="our-services-icon larger-icon">
			    		<% if index == 0 %>
		    				<i class="fa fa-child"></i>
		              	<% elsif index == 1 %>
		                	<i class="fa fa-film"></i>
		                <% elsif index == 2 %>
		                	<i class="fa fa-briefcase"></i>
		                <% elsif index == 3 %>
		                	<i class="fa fa-map-marker"></i>
		                <% elsif index == 4 %>
		                	<i class="fa fa-plane"></i>
		              	<% else %>
		               		<i class="fa fa-calendar"></i>
		            	<% end %>
					</div>
				</div>
		    	<div class="col-xs-11 col-md-3 services-mobile-padding">
		    		<h4><%= service_paragraphs.title %></h4>
		    		<p><%= service_paragraphs.content %></p>
		    	</div>
			<% end %>
	    <% end %>
	</div>
</div>
</div>

<!-- Fourth section - Our Team -->
<div class="container section-padding text-center" id="our-team">
	<div class="our-team">
		<h3>OUR TEAM</h3>
		<p>Let us introduce you to some of our amazing creative team. We are delighted to work with over 100 creatives who all maintain successful careers in theatre, film, television, dance, music, art and design. It is this unique connection that enriches our service and makes our offering extra special.</p>
	</div>

	<!-- First row - team members -->
	<div class="row team-content">
		<div class="col-xs-12 col-sm-6 col-md-6 col-lg-3 team-member text-center">
			<%= image_tag("http://res.cloudinary.com/ddota4fci/image/upload/v1475845440/ME_hfrqwh.jpg", crop: :fit) %>
			<h5>Amy</h5>
			<p>FOUNDER & MANAGING DIRECTOR</p>
		</div>
		<div class="col-xs-12 col-sm-6 col-md-6 col-lg-3 team-member text-center">
			<%= image_tag("http://res.cloudinary.com/ddota4fci/image/upload/v1475847621/Jamie_nzbzoh.png", crop: :fit) %>
			<h5>James</h5>
			<p>COO</p>
		</div>
		<div class="col-xs-12 col-sm-6 col-md-6 col-lg-3 team-member text-center">
			<%= image_tag("http://res.cloudinary.com/ddota4fci/image/upload/v1475845418/TANYA_hf6x2q.jpg", crop: :fit) %>
			<h5>Tanya</h5>
			<p>HEAD OF CHAPERONES</p>
		</div>
		<div class="col-xs-12 col-sm-6 col-md-6 col-lg-3 team-member text-center">
			<%= image_tag("http://res.cloudinary.com/ddota4fci/image/upload/v1475845433/LAURA_itzvgm.jpg", crop: :fit) %>
			<h5>Laura</h5>
			<p>CREATIVE MANAGER</p>
		</div>
	</div>

	<!-- Second row - team members -->
	<% if @user %>
		<div class="row team-content">
			<% @user.each_with_index do |user, index| %>
				<% if user.admin == false %>
					<div class="col-xs-12 col-sm-6 col-md-6 col-lg-3 team-member text-center">
						<%= image_tag(user.photo)%>
						<h5><%= user.first_name %></h5>
						<p>CREATIVE</p>
					</div>
				<% elsif user.admin == false %>
					<div class="col-xs-12 col-sm-6 col-md-6 col-lg-3 team-member text-center">
						<%= image_tag(user.photo)%>
						<h5><%= user.first_name %></h5>
						<p>CREATIVE</p>
					</div>
				<% elsif user.admin == false %>
					<div class="col-xs-12 col-sm-6 col-md-6 col-lg-3 team-member text-center">
						<%= image_tag(user.photo)%>
						<h5><%= user.first_name %></h5>
						<p>CREATIVE</p>
					</div>
				<% elsif user.admin == false %>
					<div class="col-xs-12 col-sm-6 col-md-6 col-lg-3 team-member text-center">
						<%= image_tag(user.photo)%>
						<h5><%= user.first_name %></h5>
						<p>CREATIVE</p>
					</div>
				<% else %>
				<% end %>
			<% end %>
			<!-- Join us box -->
			<div class="col-xs-12 col-sm-6 col-md-6 col-lg-3 text-center">
				<div class="join-us-box">
					<%= link_to jobapps_path do %>
		    			<%= image_tag("http://res.cloudinary.com/ddota4fci/image/upload/v1475150361/wpllto3wkkch8ri4gwzz.png", id: "q-mark") %>
		    		<% end %>
		    	<div id="apply-now">
		    		<%= link_to jobapps_path do %>
				    	<h3>WORK WITH US</h3>
			    		<p>Apply to join the Bea & Co team</p>
		    		<% end %>
		    	</div>
	  		</div>
			<div class="team-member">
				<h5>Join Us</h5>
				<p>CAN ANY OF OUR TEAM RECOMMEND YOU?</p>
			</div>
		</div>
	</div>
	<% end %>
</div>

<%= render 'shared/press' %>
<%= render 'shared/happy_people' %>
<%= render 'shared/our_partners' %>
<%= render 'shared/contact' %>
<%= render 'shared/footer' %>

